# 数据库配置 (测试时可以先不配置)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=emotion_analysis

# 百炼大模型配置 (需要替换为真实的API Key)
BAILILIAN_API_KEY=your_bailian_api_key_here
